{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./tsbuild/",
        
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        
        "experimentalDecorators": true,
        "declaration": true,
        "sourceMap": true,
        "pretty": true,
        "strict": true,

        "lib": [
            "esnext",
            "dom"
        ]
    }, 

    "include": [
        "src/**/*.ts"
    ]
}